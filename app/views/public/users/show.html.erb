<h1>マイページ（会員詳細画面）</h1>

<section id="user-show">
    <div class="user-show">
        <!--フラッシュ目セージ-->
        <%= flash[:user_notice] %>
        <!--会員詳細情報-->
        <h3>画像</h3>
        <% if @user.user_image.attached? %>
            <%= image_tag @user.user_image %>
        <% else %>
            <%= image_tag 'no_image' %>
        <% end %>
        <h3>ニックネーム</h3>
        <%= @user.nickname %>
        <h3>Email</h3>
        <%= @user.email%>
    </div>
    <!--ゲストユーザーの場合は表示させない-->
    <% if @user.nickname != "guestuser" %>
        <%= link_to "編集する", info_edit_path %>
    <% end%>    
</section>
