<div class="contents">
    <div class="wrapper">
        <h1>マイページ</h1>
        <section class="user">
            <div class="user-show">
                <!--フラッシュメッセージ-->
                <%= flash[:user_notice] %>
                 <!--フラッシュメッセージ-->
                <%= flash[:notice] %>
                <!--会員詳細情報-->
                <ul class="detail">
                    <li>
                        <h3>画像</h3>
                        <% if @user.user_image.attached? %>
                            <%= image_tag @user.user_image %>
                        <% else %>
                            <%= image_tag 'no_image.jpg' %>
                        <% end %>
                    </li>
                    <li>
                        <h3>ニックネーム</h3>
                        <p><%= @user.nickname %></p>
                    </li>
                    <li>
                        <h3>Email</h3>
                        <p><%= @user.email%></p>
                    </li>
                </ul>
                <!--ゲストユーザーの場合は表示させない-->
                <div class="edit-button">
                    <% if @user.nickname != "guestuser" %>
                        <%= link_to "編集する", info_edit_path, class:'link-button' %>
                    <% end %>
                </div>
            </div>  
        </section>
    </div>
</div>

