<h1>公園編集(管理者)</h1>
<section class="user-park">
  <div class="user-park-show">
  <%= form_with model: @park, url:admin_park_path(@park.id) do |f| %>  
    <div class="park-title">
      <%= link_to '戻る', admin_park_path(@park.id),data: { turbo: false }  %>
      <h2><%= @park.park %></h2>
    </div>
    
    <!--5段階評価平均-->
