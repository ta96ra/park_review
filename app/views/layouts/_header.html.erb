<header>
  <div class="header-content">
    <div class="sun">
      <%= image_tag('headersun1.png')%>
    </div>
    <div class="logo">
      <%= link_to root_path,data: {"turbolinks"=>false} do %>
        <%= image_tag('logo.png')%> 
      <% end %>
    </div>
    <div class="bird">
      <%= image_tag('bird.png')%>
    </div>
    
    <!--PC,Tabの時の表示-->
    
    <nav class="pc">
      <ul>
      <!--ユーザーログインの場合の表示-->
      <% if user_signed_in? %>
        <li>
          <%= link_to root_path,data: {"turbolinks"=>false} do %>
            <div class="circle-btn"></div>
            <p>ホーム</p>
          <% end %>
        </li>
        <li>
          <%= link_to parks_path do %>
            <div class="circle-btn"></div>
            <p>公園を探す</p>
          <% end %>   
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <div class="circle-btn"></div>
            <p>ログアウト</p>
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user) do %>
            <div class="circle-btn"></div>
            <p>マイページ</p>
          <% end %>
        </li>
      <!--管理者ログインの場合の表示-->
      <% elsif admin_signed_in?%>
        <li>
          <%= link_to admin_users_path  do %>
            <div class="circle-btn"></div>
            <p>会員一覧</p>
          <% end %>  
        </li>
        <li>
          <%= link_to admin_parks_path do %>
            <div class="circle-btn"></div>
            <p>公園一覧</p>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_admin_session_path, method: :delete do %>
            <div class="circle-btn"></div>
            <p>ログアウト</p>
          <% end %>
        </li>
      <!--ログアウトしている場合の表示-->
      <% else %>
        <li>
          <%= link_to parks_path do %>
            <div class="circle-btn"></div>
            <p>公園を探す</p>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path,data: {"turbolinks"=>false} do %>
            <div class="circle-btn"></div>
            <p>会員登録</p>
          <% end %>
        </li>
        <li>
          <%= link_to users_guest_sign_in_path, method: :post do %>
            <div class="circle-btn"></div>
            <p>ゲスト</p>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path do %>
            <div class="circle-btn"></div>
            <p>ログイン</p>
          <% end %>
        </li>
      <% end %>
      </ul>
    </nav>
    <!--ハンバーガー-->
    <div id="hamburger">
      <div class="hamburger">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>  
    <!--SPの時の表示-->
    <nav class="sp">
      <ul>
      <!--ユーザーログインの場合の表示-->
      <% if user_signed_in? %>
        <li>
          <%= link_to "ホーム", root_path,data: {"turbolinks"=>false} %>
        </li>
        <li>
          <%= link_to "公園を探す", parks_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to "マイページ", user_path(current_user) %>
        </li>
      <!--管理者ログインの場合の表示-->
      <% elsif admin_signed_in?%>
        <li>
          <%= link_to "会員一覧", admin_users_path %>
        </li>
        <li>
          <%= link_to "公園を探す", admin_parks_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
      <!--ログアウトしている場合の表示-->
      <% else %>
        <li>
          <%= link_to "公園を探す", parks_path %>
        </li>
        <li>
          <%= link_to "会員登録", new_user_registration_path,data: {"turbolinks"=>false} %>
        </li>
        <li>
          <%= link_to 'ゲスト', users_guest_sign_in_path, method: :post %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
      <% end %>
      </ul>
    </nav>
  </div>
</header>